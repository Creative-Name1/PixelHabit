<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_habit_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:background="@drawable/black"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/texas_rose"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_marginStart="10sp"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/backarrow_banner"
            android:background="#000000"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Habit"
            android:fontFamily="@font/ultrakill_font"
            android:layout_margin="10sp"
            android:textSize="30sp"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@drawable/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginStart="20sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="4sp"
                android:text="Name:"
                android:fontFamily="@font/ultrakill_font"
                android:textSize="22sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/black"/>

        </LinearLayout>

        <EditText
            android:id="@+id/name_setter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="15sp"
            android:textSize="20sp"
            android:hint="Make sure to drink 6-7 cups of water a day to stay tuff"
            android:fontFamily="@font/ultrakill_font"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="20sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="4sp"
                android:text="Description:"
                android:fontFamily="@font/ultrakill_font"
                android:textSize="22sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/black"/>

        </LinearLayout>

        <EditText
            android:id="@+id/desc_setter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="15sp"
            android:textSize="20sp"
            android:hint="Heheheha!"
            android:fontFamily="@font/ultrakill_font"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@drawable/linearlayout_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/completion_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ultrakill_font"
                android:textSize="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginBottom="15sp"
                android:layout_marginTop="20sp"
                android:layout_weight="1"
                android:text="Completion Type: Min-Max"/>

            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_margin="10sp"
                android:background="@drawable/linearlayout_border_grey">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:fontFamily="@font/ultrakill_font"
                    android:text="Edit"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Grouped for convenience -->
        <LinearLayout
            android:id="@+id/min_max_info"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min:"
                    android:layout_marginStart="20sp"
                    android:layout_marginBottom="15sp"
                    android:fontFamily="@font/exo_2"
                    android:textColor="@color/grey"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/min_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="15sp"
                    android:fontFamily="@font/exo_2"
                    android:textColor="@color/grey"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/unit_1"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17"
                    android:layout_marginStart="0sp"
                    android:layout_marginBottom="20sp"
                    android:fontFamily="@font/exo_2"
                    android:textColor="@color/grey"
                    android:textSize="18sp"/>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max:"
                    android:layout_marginStart="20sp"
                    android:layout_marginBottom="15sp"
                    android:fontFamily="@font/exo_2"
                    android:textColor="@color/grey"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/max_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="15sp"
                    android:fontFamily="@font/exo_2"
                    android:textColor="@color/grey"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/unit_2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17"
                    android:layout_marginStart="0sp"
                    android:layout_marginBottom="20sp"
                    android:fontFamily="@font/exo_2"
                    android:textColor="@color/grey"
                    android:textSize="18sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>